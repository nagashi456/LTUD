<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Nền tròn xanh -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#4FC3F7" /> <!-- màu xanh dương -->
        </shape>
    </item>

    <!-- Chuông trắng ở giữa -->
    <item
        android:width="48dp"
        android:height="48dp"
        android:gravity="center">
        <vector
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:fillColor="#FFFFFF"
                android:pathData="M12 22c1.1 0 2-.9 2-2h-4c0 1.1 0.9 2 2 2zM18 16v-5c0-2.97-2.16-5.43-5-5.91V4c0-0.55-0.45-1-1-1s-1 0.45-1 1v1.09C8.16 5.57 6 8.03 6 11v5l-2 2v1h16v-1l-2-2z"/>
        </vector>
    </item>

    <!-- Chấm đỏ (thông báo) -->
    <item
        android:top="6dp"
        android:right="6dp"
        android:width="12dp"
        android:height="12dp"
        android:gravity="top|end">
        <shape android:shape="oval">
            <solid android:color="#F44336"/> <!-- đỏ -->
        </shape>
    </item>

</layer-list>
